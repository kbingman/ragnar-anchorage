{
  "name": "reactive",
  "version": "1.0.0",
  "description": "Flight test app",
  "main": "index.js",
  "scripts": {
    "start": "PORT=3001 MONGO_URL=localhost ENV=development go run app.go",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:css && npm run build:js",
    "build:css": "sassc src/css/app.scss > public/css/bundle.css",
    "build:js": "browserify -t hoganify src/js/app.js > public/js/bundle.js",
    "watch": "watchify -t hoganify src/js/app.js -o public/js/bundle.js --debug"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "es6-promise": "^2.0.1",
    "flightjs": "^1.5.0",
    "hogan.js": "^3.0.2",
    "hoganify": "^0.2.0",
    "jquery": "^2.1.3",
    "rx": "^2.4.1",
    "uglify": "^0.1.1",
    "watch": "^0.14.0"
  },
  "devDependencies": {
    "chai": "^2.1.1",
    "karma": "^0.12.31",
    "karma-browserifast": "^0.7.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^0.1.5",
    "karma-ios-launcher": "0.0.3",
    "karma-mocha": "^0.1.9",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-safari-launcher": "^0.1.1",
    "karma-sinon": "^1.0.4",
    "karma-spec-reporter": "0.0.13",
    "mocha": "^2.0.1",
    "sinon": "^1.12.1"
  }
}
